<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="rvOverview"
            type="com.example.simplegithubapp.overview.RvItemOverview" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/rv_border"
            android:paddingVertical="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <ImageView
                android:id="@+id/img_book"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/book"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_overview_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:fontFamily="sans-serif-medium"
                android:text="@{rvOverview.name}"
                android:textColor="@color/colorBlack"
                app:layout_constraintBottom_toBottomOf="@+id/img_book"
                app:layout_constraintStart_toEndOf="@+id/img_book"
                app:layout_constraintTop_toTopOf="@+id/img_book" />

            <TextView
                android:id="@+id/txt_overview_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:text="@{rvOverview.desc}"
                app:layout_constraintStart_toStartOf="@+id/img_book"
                app:layout_constraintTop_toBottomOf="@+id/img_book" />


            <ImageView
                android:id="@+id/img_overview_language_color"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:background="@color/colorPointBlue"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/img_overview_language_name"
                app:layout_constraintStart_toStartOf="@+id/txt_overview_desc"
                app:layout_constraintTop_toBottomOf="@+id/txt_overview_desc" />

            <TextView
                android:id="@+id/img_overview_language_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="15dp"
                android:text="@{rvOverview.language}"
                app:layout_constraintBottom_toBottomOf="@+id/img_overview_language_color"
                app:layout_constraintEnd_toStartOf="@+id/img_overview_star"
                app:layout_constraintStart_toEndOf="@+id/img_overview_language_color"
                app:layout_constraintTop_toTopOf="@+id/img_overview_language_color" />

            <ImageView
                android:id="@+id/img_overview_star"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="5dp"
                android:src="@drawable/star_selected"
                app:layout_constraintBottom_toBottomOf="@+id/img_overview_language_color"
                app:layout_constraintEnd_toStartOf="@+id/txt_overview_star_num"
                app:layout_constraintStart_toEndOf="@+id/img_overview_language_name"
                app:layout_constraintTop_toTopOf="@+id/img_overview_language_color"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/txt_overview_star_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="15dp"
                android:text="@{String.valueOf(rvOverview.starNum)}"
                app:layout_constraintBottom_toBottomOf="@+id/img_overview_star"
                app:layout_constraintEnd_toStartOf="@+id/img_overview_fork"
                app:layout_constraintStart_toEndOf="@+id/img_overview_star"
                app:layout_constraintTop_toTopOf="@+id/img_overview_star" />

            <ImageView
                android:id="@+id/img_overview_fork"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="5dp"
                app:layout_constraintBottom_toBottomOf="@+id/img_overview_star"
                app:layout_constraintEnd_toStartOf="@+id/txt_overview_fork_num"
                app:layout_constraintStart_toEndOf="@+id/txt_overview_star_num"
                app:layout_constraintTop_toTopOf="@+id/img_overview_star"
                app:srcCompat="@drawable/img_fork" />

            <TextView
                android:id="@+id/txt_overview_fork_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="130dp"
                android:text="@{String.valueOf(rvOverview.forkNum)}"
                app:layout_constraintBottom_toBottomOf="@+id/img_overview_fork"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/img_overview_fork"
                app:layout_constraintTop_toTopOf="@+id/img_overview_fork" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>